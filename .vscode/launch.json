{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch selected exercise",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/${input:exercise}/${input:programName}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/${input:exercise}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "preLaunchTask": "Make",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    }
  ],
  "inputs": [
    {
      "id": "exercise",
      "type": "promptString",
      "description": "Relative path to exercise directory (e.g. CPP00/ex01)",
      "default": "CPP00/ex01"
    },
    {
      "id": "programName",
      "type": "promptString",
      "description": "Binary name produced by the Makefile (e.g. phonebook)",
      "default": "phonebook"
    }
  ]
}